{
  "name": "living-times",
  "label": "Living Times",
  "version": "0.0.19",
  "license": "Copyright (c) 2018 Livingdocs AG, all rights reserved",

  "assets": {
    "basePath": "https://cdn.livingdocs.io/designs/living-times/0.0.14",
    "css": ["./styles.css"],
    "js": ["./scripts.js"]
  },

  "componentProperties": {

    "selected-menu": {
      "label": "Selected Menu Item",
      "type": "option",
      "value": "is-selected"
    },

    "position": {
      "label": "Position",
      "type": "select",
      "options": [
        {
          "caption": "Middle"
        },
        {
          "caption": "Left",
          "value": "left"
        },
        {
          "caption": "Right",
          "value": "right"
        }
      ]
    },

    "image-position": {
      "label": "Position",
      "type": "select",
      "options": [
        {
          "caption": "Middle"
        },
        {
          "caption": "Left",
          "value": "image--left"
        },
        {
          "caption": "Right",
          "value": "image--right"
        }
      ]
    },

    "teaser-image-position": {
      "label": "Position",
      "type": "select",
      "options": [
        {
          "caption": "Normal"
        },
        {
          "caption": "Left",
          "value": "teaser-card--left-aligned-img"
        },
        {
          "caption": "Right",
          "value": "teaser-card--right-aligned-img"
        }
      ]
    },

    "container-style-breath": {
      "label": "Extra margin",
      "type": "option",
      "value": "container--breath"
    },

    "container-style-lined": {
      "label": "Add lines",
      "type": "option",
      "value": "container--lined"
    },

    "options": {
      "id": "Options",
      "label": "Options",
      "type": "select",
      "options": [
        {
          "caption": "Default"
        },
        {
          "caption": "Stripe",
          "value": "half-height"
        }
      ]
    },

    "featured": {
      "label": "Featured",
      "type": "option",
      "value": "bleed"
    },

    "unordered": {
      "label": "Unordered",
      "type": "option",
      "value": "bullet"
    },

    "large": {
      "label": "Large",
      "type": "option",
      "value": "large"
    },

    "list-type": {
      "label": "List Type",
      "type": "select",
      "options": [
        {
          "caption": "Bullets"
        }, {
          "caption": "Numbers",
          "value": "decimal"
        }, {
          "caption": "Letters",
          "value": "lower-latin"
        }, {
          "caption": "Romans",
          "value": "lower-roman"
        }
      ]
    }
  },

  "layouts": [
    {
      "name": "regular",
      "caption": "Article",
      "wrapper": "<div class=\"doc-section wrapper wrapper--in-editor wrapper--article\"></div>",
      "icon": null,
      "defaultContent": [
        {
          "identifier": "living-times.article-container",
          "containers": {
            "header": [
              { "identifier": "living-times.head" }
            ],
            "main": [
              { "identifier": "living-times.image" },
              { "identifier": "living-times.paragraph" },
              { "identifier": "living-times.teaser-author"}
            ],
            "sidebar-ads-top": [
              { "identifier": "living-times.free-html" }
            ],
            "sidebar": [
              {
                "identifier": "living-times.sidebar-title",
                "content": {
                  "title": "Most Popular"
                }
              },
              {
                "identifier": "living-times.teaser-sidebar"
              },
              {
                "identifier": "living-times.teaser-sidebar"
              },
              {
                "identifier": "living-times.teaser-sidebar"
              },
              {
                "identifier": "living-times.teaser-sidebar"
              }
            ],
            "sidebar-ads-bottom": [
              { "identifier": "living-times.free-html" }
            ],
            "footer": [
              {
                "identifier": "living-times.2-col-teaser-stack",
                "content": {
                  "title": "Recommended Stories"
                }
              }
            ]
          }
        }
      ],
      "groups": [
        {
          "label": "Headers",
          "components": ["head", "subtitle"]
        },
        {
          "label": "Text",
          "components": ["paragraph", "quote", "separator", "bullet-list", "bullet-list-item"]
        },
        {
          "label": "Images",
          "components": ["image"]
        },
        {
          "label": "Sidebar",
          "components": ["sidebar-title", "teaser-sidebar"]
        },
        {
          "label": "Footer",
          "components": ["2-col-teaser-stack"]
        },
        {
          "label": "Embeds",
          "components": ["teaser-author", "tweet", "iframe", "free-html"]
        }
      ]
    },
    {
      "name": "author",
      "caption": "Author",
      "wrapper": "<div class=\"doc-section wrapper wrapper--in-editor wrapper--article\"></div>",
      "icon": null,
      "defaultContent": [
        {
          "identifier": "living-times.author-container",
          "containers": {
            "main": [
              { "identifier": "living-times.author-head" },
              {
                "identifier": "living-times.whole",
                "styles": {
                  "container-style-lined": "container--lined"
                },
                "content": {
                  "title": "All Work"
                },
                "containers": {
                  "column-one": []
                }
              }
            ],
            "sidebar": []
          }
        }
      ],
      "groups": [
        {
          "label": "Headers",
          "components": ["author-head"]
        },
        {
          "label": "Text",
          "components": ["paragraph", "quote", "separator", "bullet-list", "bullet-list-item"]
        },
        {
          "label": "Images",
          "components": ["image"]
        },
        {
          "label": "Containers",
          "components": ["whole", "halves", "halves-uneven", "thirds", "quarter"]
        },
        {
          "label": "Sidebar",
          "components": ["sidebar-title", "teaser-sidebar"]
        },
        {
          "label": "Embeds",
          "components": ["teaser-card", "tweet", "iframe", "free-html"]
        }
      ]
    },
    {
      "name": "gallery",
      "caption": "Gallery",
      "wrapper": "<div class=\"doc-section wrapper wrapper--in-editor wrapper--article\"></div>",
      "icon": null,
      "defaultContent": [
        {
          "identifier": "living-times.asset-content",
          "containers": {
            "header": [
              { "identifier": "living-times.head" }
            ],
            "main": [
              {
                "identifier": "living-times.asset-container-gallery",
                "containers": {
                  "gallery": [
                    { "identifier": "living-times.image" },
                    { "identifier": "living-times.image" }
                  ]
                }
              }
            ]
          }
        }
      ],
      "groups": [
        {
          "label": "Headers",
          "components": ["asset-head-gallery"]
        },
        {
          "label": "Image",
          "components": ["asset-image"]
        }
      ]
    },
    {
      "name": "video",
      "caption": "Video",
      "wrapper": "<div class=\"doc-section wrapper wrapper--in-editor wrapper--article\"></div>",
      "icon": null,
      "defaultContent": [
        {
          "identifier": "living-times.article-container",
          "containers": {
            "header": [
              { "identifier": "living-times.head" }
            ],
            "main": [
              {
                "identifier": "living-times.video-container",
                "containers": {
                  "image": [
                    { "identifier": "living-times.image" }
                  ],
                  "video": [
                    { "identifier": "living-times.free-html" }
                  ]
                }
              }
            ]
          }
        }
      ],
      "groups": [
        {
          "label": "Headers",
          "components": ["head"]
        },
        {
          "label": "Teaser Image",
          "components": ["image"]
        },
        {
          "label": "Video",
          "components": ["free-html", "iframe"]
        }
      ]
    },
    {
      "name": "page",
      "caption": "Page",
      "wrapper": "<div class=\"doc-section wrapper wrapper--in-editor wrapper--default\"></div>",
      "icon": null,
      "defaultContent": [
        {
            "identifier": "living-times.1-teaser-row"
        },
        {
            "identifier": "living-times.3-teaser-row",
            "styles" : {
              "container-style-lined": "container--lined"
            }
        },
        {
            "identifier": "living-times.4-teaser-row-textonly",
            "styles" : {
              "container-style-lined": "container--lined"
            }
        },
        {
          "identifier": "living-times.teaser-stack",
          "styles" : {
            "container-style-lined": "container--lined"
          },
          "content": {
            "title": "The latest"
          }
        },
        {
          "identifier": "living-times.4-teaser-row",
          "styles":  {
            "container-style-lined": "container--lined"
          },
          "content": {
            "title": "Spotlight"
          }
        },
        {
          "identifier": "living-times.video-block",
          "styles":  {
            "container-style-lined": "container--lined"
          },
          "content": {
            "title": "Videos"
          }
        },
        {
          "identifier": "living-times.gallery-block",
          "styles":  {
            "container-style-lined": "container--lined"
          },
          "content": {
            "title": "Photo Galleries"
          }
        }
      ],
      "groups": [
        {
          "label": "Headers",
          "components": ["section-title"]
        },
        {
          "label": "Image Teasers",
          "components": ["1-teaser-row", "2-teaser-row", "3-teaser-row", "4-teaser-row", "teaser-stack"]
        },
        {
          "label": "Text Teasers",
          "components": ["3-teaser-row-textonly", "4-teaser-row-textonly"]
        },
        {
          "label": "Blocks",
          "components": ["authors-and-popular", "gallery-block", "video-block"]
        }
      ]
    }
  ],

  "defaultLayout": "regular",

  "defaultComponents": {
    "paragraph": "paragraph",
    "image": "image",
    "html": "free-html"
  },

  "imageRatios": {
    "16:9": {
      "label": "16:9",
      "ratio": "16x9"
    },
    "1:1": {
      "label": "1:1",
      "ratio": "1x1"
    },
    "4:3": {
      "label": "4:3",
      "ratio": "4x3"
    },
    "3:4": {
      "label": "3:4",
      "ratio": "3x4"
    }
  },

  "prefilledComponents": {
    "head": {
      "author": {
        "value": "author",
        "type": "computed"
      }
    }
  },

  "metadata": [
    {
      "identifier": "title",
      "type": "text",
      "matches": ["head.title"],
      "isEditable": true
    },
    {
      "identifier": "description",
      "type": "text",
      "matches": ["head.text", "paragraph.text"],
      "isEditable": true
    },
    {
      "identifier": "teaserImage",
      "type": "image",
      "matches": ["image.image"],
      "isEditable": true,
      "imageRatios": ["16:9"]
    }
  ]
}
