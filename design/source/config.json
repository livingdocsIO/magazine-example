{
  "name": "living-times",
  "label": "Living Times",
  "version": "0.0.1",
  "license": "Copyright (c) 2017 Livingdocs GmbH, all rights reserved",

  "assets": {
    "css": ["/styles.css"],
    "js": ["/scripts.js"]
  },

  "componentProperties": {

    "selected-menu": {
      "label": "Selected Menu Item",
      "type": "option",
      "value": "is-selected"
    },

    "position": {
      "label": "Position",
      "type": "select",
      "options": [
        {
          "caption": "Middle"
        },
        {
          "caption": "Left",
          "value": "left"
        },
        {
          "caption": "Right",
          "value": "right"
        }
      ]
    },

    "image-position": {
      "label": "Position",
      "type": "select",
      "options": [
        {
          "caption": "Middle"
        },
        {
          "caption": "Left",
          "value": "c-image--left"
        },
        {
          "caption": "Right",
          "value": "c-image--left"
        }
      ]
    },

    "container-style-breath": {
      "label": "Extra margin",
      "type": "option",
      "value": "container--breath"
    },

    "container-style-lined": {
      "label": "Add lines",
      "type": "option",
      "value": "container--lined"
    },

    "options": {
      "id": "Options",
      "label": "Options",
      "type": "select",
      "options": [
        {
          "caption": "Default"
        },
        {
          "caption": "Stripe",
          "value": "half-height"
        }
      ]
    },

    "featured": {
      "label": "Featured",
      "type": "option",
      "value": "bleed"
    },

    "unordered": {
      "label": "Unordered",
      "type": "option",
      "value": "bullet"
    },

    "large": {
      "label": "Large",
      "type": "option",
      "value": "large"
    },

    "list-type": {
      "label": "List Type",
      "type": "select",
      "options": [
        {
          "caption": "Bullets"
        }, {
          "caption": "Numbers",
          "value": "decimal"
        }, {
          "caption": "Letters",
          "value": "lower-latin"
        }, {
          "caption": "Romans",
          "value": "lower-roman"
        }
      ]
    }
  },

  "layouts": [
    {
      "name": "regular",
      "caption": "Article",
      "wrapper": "<div class=\"doc-section\"></div>",
      "icon": null,
      "defaultContent": [
        { "identifier": "living-times.article-container",
          "containers": {
            "header": [
              { "identifier": "living-times.head" }
            ],
            "main": [
              { "identifier": "living-times.image",
                "styles": {
                  "image-position": "c-image--left",
                  "aspect-ratio": "square"
                }
              },
              { "identifier": "living-times.paragraph" }
            ],
            "sidebar": [],
            "footer": []
          }
        }
      ],
      "groups": [
        {
          "label": "Headers",
          "components": ["head", "subtitle"]
        },
        {
          "label": "Text",
          "components": ["paragraph", "quote", "separator", "bullet-list"]
        },
        {
          "label": "Images",
          "components": ["image"]
        },
        {
          "label": "Containers",
          "components": []
        },
        {
          "label": "Teasers",
          "components": []
        },
        {
          "label": "Sidebar",
          "components": []
        },
        {
          "label": "Embeds",
          "components": ["tweet", "iframe", "free-html"]
        }
      ]
    },
    {
      "name": "gallery",
      "caption": "Gallery",
      "wrapper": "<div class=\"doc-section\"></div>",
      "icon": null,
      "defaultContent": [
        {
          "identifier": "living-times.article-container",
          "containers": {
            "header": [
              { "identifier": "living-times.head" }
            ],
            "body": [
              {
                "identifier": "living-times.gallery-container",
                "containers": {
                  "gallery": [
                    { "identifier": "living-times.image" },
                    { "identifier": "living-times.image" }
                  ]
                }
              }
            ],
            "sidebar": []
          }
        }
      ],
      "groups": [
        {
          "label": "Headers",
          "components": ["head"]
        },
        {
          "label": "Image",
          "components": ["gallery-container", "image"]
        }
      ]
    },
    {
      "name": "video",
      "caption": "Video",
      "wrapper": "<div class=\"doc-section\"></div>",
      "icon": null,
      "defaultContent": [
        {
          "identifier": "living-times.article-container",
          "containers": {
            "header": [
              { "identifier": "living-times.head" }
            ],
            "body": [
              {
                "identifier": "living-times.video-container",
                "containers": {
                  "image": [
                    { "identifier": "living-times.image" }
                  ],
                  "video": [
                    { "identifier": "living-times.free-html" }
                  ]
                }
              }
            ],
            "sidebar": []
          }
        }
      ],
      "groups": [
        {
          "label": "Headers",
          "components": ["head"]
        },
        {
          "label": "Teaser Image",
          "components": ["image"]
        },
        {
          "label": "Video",
          "components": ["video-container", "free-html", "iframe"]
        }
      ]
    },
    {
      "name": "page",
      "caption": "Page",
      "wrapper": "<div class=\"doc-section\"></div>",
      "icon": null,
      "defaultContent": [],
      "groups": [
        {
          "label": "Static Components",
          "components": []
        },
        {
          "label": "Containers",
          "components": []
        },
        {
          "label": "Teasers",
          "components": ["teaser-hero", "embed-teaser"]
        },
        {
          "label": "Embeds",
          "components": ["tweet", "iframe", "free-html"]
        }
      ]
    }
  ],

  "defaultLayout": "regular",

  "defaultComponents": {
    "paragraph": "paragraph",
    "image": "image",
    "html": "free-html"
  },

  "imageRatios": {
    "16:9": {
      "label": "16:9",
      "ratio": "16x9"
    },
    "1:1": {
      "label": "1:1",
      "ratio": "1x1"
    },
    "4:3": {
      "label": "4:3",
      "ratio": "4x3"
    },
    "3:4": {
      "label": "3:4",
      "ratio": "3x4"
    }
  },

  "prefilledComponents": {
    "head": {
      "meta": {
        "value": "author",
        "type": "computed"
      }
    }
  },

  "metadata": [
    {
      "identifier": "title",
      "type": "text",
      "matches": ["head.title"],
      "isEditable": true
    },
    {
      "identifier": "description",
      "type": "text",
      "matches": ["head.text", "paragraph.text"],
      "isEditable": true
    },
    {
      "identifier": "author",
      "type": "text",
      "matches": ["head.meta"],
      "isEditable": true
    },
    {
      "identifier": "teaserImage",
      "type": "image",
      "matches": ["image.image"],
      "isEditable": true,
      "imageRatios": ["16:9"]
    }
  ]
}
